<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wall_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculation_title"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/wall_image_wall_length"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@color/colorPrimaryDark"
            android:scaleType="centerInside"
            android:layout_below="@id/wall_title"
            android:layout_alignLeft="@id/wall_title"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/wall_question_wall_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="500dp"
            android:text="@string/question_wall_length"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_alignTop="@id/wall_image_wall_length"
            android:layout_toRightOf="@id/wall_image_wall_length"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:id="@+id/wall_answer_wall_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/answer_hint"
            android:maxLength="50"
            android:layout_alignBottom="@id/wall_image_wall_length"
            android:layout_alignLeft="@id/wall_question_wall_length"
            android:layout_alignRight="@id/wall_question_wall_length"/>

        <ImageView
            android:id="@+id/wall_image_height"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@color/colorAccent"
            android:scaleType="centerInside"
            android:layout_below="@id/wall_image_wall_length"
            android:layout_alignLeft="@id/wall_image_wall_length"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/wall_question_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="500dp"
            android:text="@string/question_height"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_alignTop="@id/wall_image_height"
            android:layout_toRightOf="@id/wall_image_height"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:id="@+id/wall_answer_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/answer_hint"
            android:maxLength="50"
            android:layout_alignBottom="@id/wall_image_height"
            android:layout_alignLeft="@id/wall_question_height"
            android:layout_alignRight="@id/wall_question_wall_length"/>

        <ImageView
            android:id="@+id/wall_image_gap_area"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@color/colorAccent"
            android:scaleType="centerInside"
            android:layout_below="@id/wall_image_height"
            android:layout_alignLeft="@id/wall_image_height"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/wall_question_gap_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="500dp"
            android:text="@string/question_gap_area"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_alignTop="@id/wall_image_gap_area"
            android:layout_toRightOf="@id/wall_image_gap_area"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:id="@+id/wall_answer_gap_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/answer_hint"
            android:maxLength="50"
            android:layout_alignBottom="@id/wall_image_gap_area"
            android:layout_alignLeft="@id/wall_question_gap_area"
            android:layout_alignRight="@id/wall_question_wall_length"/>

        <Button
            android:id="@+id/wall_next_button"
            android:minHeight="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_button"
            android:layout_below="@id/wall_image_gap_area"
            android:layout_alignLeft="@id/wall_image_gap_area"
            android:layout_alignRight="@id/wall_answer_gap_area"
            android:layout_marginTop="16dp"/>

    </RelativeLayout>

</ScrollView>